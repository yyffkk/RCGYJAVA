<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.api.app.dao.personalData.PersonalDataDao">
    <select id="findById" parameterType="java.lang.Integer" resultType="com.api.vo.app.PersonalDataVo">
        select * from user_resident where id =#{id}
    </select>

    <update id="updateNickName" parameterType="com.api.model.basicArchives.UserResident">
        update user_resident set nick_name = #{nickName} where id = #{id}
    </update>

    <update id="updateTel" parameterType="com.api.model.basicArchives.UserResident">
        update user_resident set tel = #{tel} where id = #{id}
    </update>

    <select id="findUserResidentByTel" parameterType="java.lang.String" resultType="com.api.model.basicArchives.UserResident">
        select * from user_resident where tel = #{tel}
    </select>

    <update id="sendTelUpdateCode" parameterType="com.api.model.basicArchives.UserResident">
        update user_resident
        set tel_update_code = #{telUpdateCode},tel_update_code_send_time = #{telUpdateCodeSendTime}
        where id = #{id}
    </update>
</mapper>