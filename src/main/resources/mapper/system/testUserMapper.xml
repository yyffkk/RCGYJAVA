<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.api.dao.system.TestDao">
    <sql id="field">
        id,user_name,pwd,tel
    </sql>
    <select id="loginSysUser" resultType="com.api.model.system.TestUser">
        select
        <include refid="field"/>
        from test_user
        where user_name = #{userName}
    </select>

    <insert id="registerSysUser" parameterType="com.api.model.system.TestUser">
        insert into test_user(user_name,pwd,tel) values (#{userName},#{pwd},#{tel})
    </insert>


</mapper>