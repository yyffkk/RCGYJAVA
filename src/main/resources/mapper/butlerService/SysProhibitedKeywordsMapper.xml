<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.aku.dao.butlerService.SysProhibitedKeywordsDao">
    <select id="list" parameterType="com.aku.model.butlerService.SearchProhibitedKeywords" resultType="com.aku.vo.butlerService.VoProhibitedKeywords">
        select * from sys_prohibited_keywords
        <where>
            <if test="keywords != null and keywords != ''">
                and keywords like concat('%',#{keywords},'%')
            </if>
            <if test="replace != null and replace != ''">
                and replace like concat('%',#{replace},'%')
            </if>
        </where>
    </select>

</mapper>