<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.aku.dao.basicArchives.BuildingDao">
    <sql id="field">
        id,number,name
    </sql>

    <select id="list" parameterType="com.aku.model.basicArchives.TestBuilding" resultType="com.aku.model.basicArchives.TestBuilding">
        select
        <include refid="field"/>
        from test_building
        <where>
            <if test="number != null and number != ''">
                and number = #{number}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
        </where>
    </select>

    <select id="listById" parameterType="java.lang.String" resultType="com.aku.model.basicArchives.TestBuilding">
        select
        <include refid="field"/>
        from test_building where id = #{id}
    </select>

    <insert id="insert" parameterType="com.aku.model.basicArchives.TestBuilding">
        insert into test_building(id,number,name)
        values (#{id},#{number},#{name})
    </insert>

    <update id="update" parameterType="com.aku.model.basicArchives.TestBuilding">
        update test_building
        <set>
            <if test="number != null and number != ''">
                number = #{number},
            </if>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
        </set>
        where id = #{id}
    </update>

    <delete id="delete" parameterType="java.lang.String">
        delete from test_building where id = #{id}
    </delete>


</mapper>